
<head>

    <link rel="stylesheet" href="/styles/admin.css">
</head>

<form action="/admin-Register-car" method="post">
    <label for="model">Car Model:</label>
    <input type="text" id="model" name="model" required>
    <label for="year">Car Year:</label>
    <input type="number" id="year" name="year" min="1900" max="2024" required>
    <label for="PlateID">Car PlateID:</label>
    <input type="text" id="plateid" name="plateid" required>
    <label for="unitPrice">Unit Price:</label>
<input type="number" id="unitprice" name="unitprice" placeholder="Enter unit price" required>
    
    <label for="status">Status:</label>
    <select id="status" name="status">
        <option value="Active">Active</option>
        <option value="reserved">Reserved</option>
        <option value="out of service">Out of Service</option>
    </select>

    <label for="office">Choose an Office:</label>
    <select id="office" name="officeid">
        <% offices.forEach(office => { %>
            <option value="<%= office.office_id %>"><%= office.location %></option>
        <% }); %>
    </select>

    <button type="submit">Register Car</button>
</form>
